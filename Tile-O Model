namespace tile-o;

class Game {
Integer numPlayers;
Integer winningTileCoordinateX;
Integer winningTileCoordinateY;
Integer numberOfTurns;

1 -- 2..4 Player;
1 <@>- * GameElement;
1 <@>- 1 Board;

}

class GameElement {

}

class Player {
autounique id;
1 -- 1 PlayingPiece;
}

class Board {
Integer numNormalTiles;
Integer numActionTiles;
Integer numConnectionPieces;
Integer length;
Integer width;

1 <@>- * Tile;

}

class Deck {
isA GameElement;
1 -- 0..32 Card;
}

class Card {

}

class ExtraTurnCard {
isA Card;
String cardType = "ExtraTurn";
}

class ConnectTileCard {
isA Card;
String cardType = "ConnectTile";
}

class RemoveConnectionCard {
isA Card;
String cardType = "RemoveConnection";
}

class MovePieceCard {
isA Card;
String cardType = "MovePiece";
}

class LoseTurnCard {
isA Card;
String cardType = "LoseTurn";
}

class Tile {
isA GameElement;
autounique id;
immutable Integer coordinateX;
immutable Integer coordinateY;
Integer numConnectedPieces;
Color color;
0..4 -- 0,2 ConnectionPiece;
}

class NormalTile {
isA Tile;
}

class ActionTile {
isA Tile;
immutable Integer numOfSleepingTurns;
Boolean active;
}

class Dice {
isA GameElement;
Integer generatedNumber;
}

class PlayingPiece {
isA GameElement;
Color color;
autounique id;
Integer coordinateX;
Integer coordinateY;
}

class ConnectionPiece {
isA GameElement;
Boolean used;
}

